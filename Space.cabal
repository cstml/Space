cabal-version:      2.4
name:               space-lang
version:            0.1.0.0
synopsis:           A declarative, statically typed, stack programing language.

-- A longer description of the package.
-- description:

-- A URL where users can report bugs.
-- bug-reports:
-- license:

-- A copyright notice.
copyright:          All rights reserved to Vlad Posmangiu Luchian 2020.
category:           languages
author:             Vlad Posmangiu Luchian
maintainer:         cstmlcodes@gmail.com

common common-config
  default-language: Haskell2010
  build-depends:    base

common Extensions
  default-extensions:
    DataKinds
    DerivingVia
    DerivingVia
    GADTs
    GeneralizedNewtypeDeriving
    KindSignatures
    LambdaCase
    RankNTypes
    ScopedTypeVariables
    TemplateHaskell
    TypeApplications

common Dependencies
  build-depends:
    , containers
    , lens
    , mtl
    , transformers
    
common Language

common Evaluator
  other-modules:
  build-depends:
    , containers
    , lens
    , mtl
    , transformers
    , prettyprinter

extra-source-files:
  CHANGELOG.md
  README.md

library
  import:           Language
  import:           Evaluator
  import:           Extensions
  exposed-modules:
    Space
    Space.Evaluator
    Space.Evaluator.Machine
    Space.Evaluator.Memory
    Space.Evaluator.Stack
    Space.Language
    Space.Language.Location
    Space.Language.Term
    Space.Language.Type
    Space.Language.Variable
    Space.Language.Vector

  build-depends:    base
  hs-source-dirs:   src
  default-language: Haskell2010

