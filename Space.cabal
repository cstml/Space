  import: Extensions
  type:           exitcode-stdio-1.0
  main-is:        Main.hs
  hs-source-dirs: test
  other-modules:
  build-depends:
    , hedgehog
    , QuickCheck
    , space-lang
    , tasty
    , tasty-expected-failure
    , tasty-hedgehog
    , tasty-hunit
    , tasty-quickcheck
    , lens
    , containers