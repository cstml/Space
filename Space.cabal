--     base ^>=4.14.3.0,
--     space-lang

-- hs-source-dirs:   app
-- default-language: Haskell2010

test-suite tests
  import:         common-config
  import:         Extensions
  type:           exitcode-stdio-1.0
  main-is:        Test.hs
  other-modules:
    Space
    Space.Aux.Show
    Space.Evaluator
    Space.Evaluator.Exception
    Space.Evaluator.Machine
    Space.Evaluator.Memory
    Space.Evaluator.Stack
    Space.Language
    Space.Language.Empty
    Space.Language.Location
    Space.Language.Term
    Space.Language.Type
    Space.Language.Variable
    Space.Language.Vector
    Test.Space.Evaluator.Machine

  hs-source-dirs: test src
  build-depends:
    , containers
    , hedgehog
    , lens
    , mtl
    , prettyprinter
    , QuickCheck
    , tasty
    , tasty-expected-failure
    , tasty-hedgehog
    , tasty-hunit
    , tasty-quickcheck
    , transformers
